  const PHOTO_BASE = "/solustoc-catalogue/catalogue/photos/";


    const produitsContainer = document.getElementById('products');
    const cartContent = document.getElementById('cart-content');
    const btnWhatsapp = document.getElementById('btn-whatsapp');
    const btnClear = document.getElementById('btn-clear');

    const lightbox = document.getElementById('lightbox');
    const lightboxImg = document.getElementById('lightbox-img');
    const lightboxClose = document.getElementById('lightbox-close');

    const cart = {}; // cl√©: index produit -> {qty, produit}

    function formatPrice(value) {
      return value.toFixed(2).replace('.', ',') + " ‚Ç¨";
    }

    function renderProduits() {
      produitsContainer.innerHTML = "";
      produits.forEach((p, index) => {
        const card = document.createElement('article');
        card.className = "card";

        const img = document.createElement('img');
        img.src = PHOTO_BASE + p.photo;
        img.alt = p.titre;
        img.onerror = () => { img.style.background = "#ccc"; img.src = ""; };
        img.addEventListener('click', () => openLightbox(p));

        const h3 = document.createElement('h3');
        h3.textContent = p.titre;

        const pricePublic = document.createElement('div');
        pricePublic.className = "price-line";
        pricePublic.textContent = "Prix public conseill√© : " + formatPrice(p.prixPublic);

        const priceSol = document.createElement('div');
        priceSol.className = "price-line price-solustoc";
        priceSol.textContent = "Prix Solustoc : " + formatPrice(p.prixSolustoc) + " TTC";

        const stock = document.createElement('div');
        stock.className = "stock";
        stock.textContent = "Stock indicatif : " + p.stock + " pi√®ces";

        const btn = document.createElement('button');
        btn.className = "btn-small";
        btn.textContent = "Ajouter √† ma s√©lection";
        btn.addEventListener('click', () => addToCart(index));

        card.appendChild(img);
        card.appendChild(h3);
        card.appendChild(pricePublic);
        card.appendChild(priceSol);
        card.appendChild(stock);
        card.appendChild(btn);

        produitsContainer.appendChild(card);
      });
    }

    function addToCart(index) {
      const p = produits[index];
      let qtyStr = prompt(`Quantit√© pour :\n${p.titre}`, "1");
      if (!qtyStr) return;
      const qty = parseInt(qtyStr, 10);
      if (isNaN(qty) || qty <= 0) return;

      if (!cart[index]) {
        cart[index] = { qty: 0, produit: p };
      }
      cart[index].qty += qty;
      renderCart();
      window.scrollTo({ top: document.body.scrollHeight, behavior: "smooth" });
    }

    function renderCart() {
      const entries = Object.values(cart);
      if (entries.length === 0) {
        cartContent.innerHTML = '<p style="text-align:center; font-size:13px; color:#555;">Aucun bijou dans votre s√©lection pour le moment.</p>';
        btnWhatsapp.disabled = true;
        return;
      }

      let html = '<table class="cart-table"><thead><tr><th>Bijou</th><th>Qt√©</th><th>PU TTC</th><th>Total</th></tr></thead><tbody>';
      let total = 0;

      entries.forEach((entry, idx) => {
        const p = entry.produit;
        const qty = entry.qty;
        const lineTotal = qty * p.prixSolustoc;
        total += lineTotal;
        html += `<tr>
          <td>${p.titre}</td>
          <td>${qty}</td>
          <td>${formatPrice(p.prixSolustoc)}</td>
          <td>${formatPrice(lineTotal)}</td>
        </tr>`;
      });

      html += '</tbody></table>';
      html += `<div class="cart-total">Total estim√© commande : ${formatPrice(total)} TTC</div>`;
      html += `<div class="cart-info"><strong>Rappel :</strong> livraison gratuite √† partir de 200 ‚Ç¨ TTC. Minimum conseill√© : 100 ‚Ç¨ TTC pour une s√©lection coh√©rente.</div>`;

      cartContent.innerHTML = html;
      btnWhatsapp.disabled = false;
    }

    function clearCart() {
      for (const key in cart) {
        delete cart[key];
      }
      renderCart();
    }

    function buildWhatsappMessage() {
      const entries = Object.values(cart);
      if (entries.length === 0) return "";

      let total = 0;
      let lines = [];
      lines.push("Bonjour, je souhaite passer une commande de bijoux √† la pi√®ce chez Solustoc.");
      lines.push("");
      lines.push("D√©tail des bijoux :");

      entries.forEach(entry => {
        const p = entry.produit;
        const qty = entry.qty;
        const lineTotal = qty * p.prixSolustoc;
        total += lineTotal;
        lines.push(`- ${qty} x ${p.titre} √† ${p.prixSolustoc.toFixed(2)} ‚Ç¨ TTC (total ${lineTotal.toFixed(2)} ‚Ç¨)`);
      });

      lines.push("");
      lines.push("Total estim√© : " + total.toFixed(2) + " ‚Ç¨ TTC.");
      lines.push("Merci de me confirmer la disponibilit√©, le mode de paiement et le d√©lai de livraison.");

      return lines.join("\n");
    }

    function sendWhatsapp() {
      const message = buildWhatsappMessage();
      if (!message) return;
      const encoded = encodeURIComponent(message);
      const url = "https://wa.me/33756923323?text=" + encoded;
      window.open(url, "_blank");
    }

    function openLightbox(p) {
      lightboxImg.src = PHOTO_BASE + p.photo;
      lightboxImg.alt = p.titre;
      lightbox.style.display = "flex";
    }

    function closeLightbox() {
      lightbox.style.display = "none";
      lightboxImg.src = "";
    }

    // √âv√©nements
    btnWhatsapp.addEventListener('click', sendWhatsapp);
    btnClear.addEventListener('click', clearCart);

    lightboxClose.addEventListener('click', closeLightbox);
    lightbox.addEventListener('click', (e) => {
      if (e.target === lightbox) closeLightbox();
    });

    // Init
    renderProduits();
    renderCart();
  </script>
</body>
</html>
